generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String         @id @default(uuid())
  name            String?
  email           String         @unique
  passwordHash    String
  isSeller        Boolean        @default(false)
  role            String         @default("buyer")
  createdAt       DateTime       @default(now())
  products        Product[]
  orders          Order[]        @relation("buyerOrders")
  reviewsGiven    ClientReview[] @relation("reviewsGiven")
  reviewsReceived ClientReview[] @relation("reviewsReceived")
  sellerRating    Float?
  buyerRating     Float?
  emailVerified   Boolean        @default(true) // Set to true by default
  wishlist        Wishlist[] // Added wishlist relation
  walletBalance   Float          @default(0) // Added wallet balance field
  referralCode    String?        @unique

  @@index([createdAt])
}

model Product {
  id          String  @id @default(uuid())
  seller      User    @relation(fields: [sellerId], references: [id])
  sellerId    String
  title       String
  slug        String  @unique
  description String
  priceCents  Int
  stock       Int     @default(0)
  soldOut     Boolean @default(false)

  category  String
  tags      String[]
  images    Image[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  wishlist  Wishlist[] // Added wishlist relation
  // @@fulltext([title, description])

  @@index([category])
  @@index([priceCents])
  @@index([createdAt])
  @@index([sellerId])
}

model Image {
  id        String  @id @default(uuid())
  url       String
  product   Product @relation(fields: [productId], references: [id])
  productId String

  @@index([productId])
}

model Order {
  id         String   @id @default(uuid())
  buyer      User     @relation("buyerOrders", fields: [buyerId], references: [id])
  buyerId    String
  items      Json
  totalCents Int
  currency   String   @default("INR")
  status     String   @default("CREATED")
  createdAt  DateTime @default(now())
  referredBy String?

  @@index([buyerId])
  @@index([createdAt])
}

model ClientReview {
  id         String   @id @default(uuid())
  rating     Int
  comment    String
  reviewer   User     @relation("reviewsGiven", fields: [reviewerId], references: [id])
  reviewerId String
  reviewee   User     @relation("reviewsReceived", fields: [revieweeId], references: [id])
  revieweeId String
  createdAt  DateTime @default(now())

  @@index([reviewerId])
  @@index([revieweeId])
  @@index([createdAt])
}

model Wishlist {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  createdAt DateTime @default(now())

  @@unique([userId, productId]) // A user can only add a product to their wishlist once
  @@index([userId])
  @@index([productId])
}
